{
  "uid": "server-core-vitals",
  "title": "Server Core Vitals",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m]) * 100",
          "legendFormat": "cpu %"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (MB)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_resident_memory_bytes / 1024 / 1024",
          "legendFormat": "rss"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Goroutines",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "go_goroutines",
          "legendFormat": "goroutines"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "GC Pause p99 (ms)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(go_gc_duration_seconds_bucket[5m])) * 1000",
          "legendFormat": "gc p99"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Open File Descriptors",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_open_fds",
          "legendFormat": "fds"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "type": "timeseries",
      "title": "Request Rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(adserver_requests_total[1m]))",
          "legendFormat": "req/s"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    }
  ]
}
